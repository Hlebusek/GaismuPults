<SaveRecordWindow>
	rows:3
	cols:2

	Button:
		id: SceneRecordBtn
		size_hint:(1,1)
		text: "Save scene\nrecord"
		background_color: (0.3,0.7,1,1)
		halign: "center"
		valign: "middle"
		on_press: root.AddSelector = "SCENE"; SceneRecordBtn.background_color = (0.3,0.7,1,1); DeviceRecordBtn.background_color = (1,1,1,0.5)

	Button:
		id: DeviceRecordBtn
		size_hint:(1,1)
		text: "Save device\nrecord"
		background_color: (1,1,1,0.6)
		halign: "center"
		valign: "middle"
		on_press: root.AddSelector = "DEVICE"; DeviceRecordBtn.background_color = (0.3,0.7,1,1); SceneRecordBtn.background_color = (1,1,1,0.5)


	Label:
		size_hint:(1,1)
		text: "Record name"

	TextInput:
		id: RecordNameInp
		size_hint:(1,1)
		font_size: "20sp"
		background_color: (1,1,1,0.2)
		foreground_color : (1,1,1,1)
		halign: "center"
		valign: "middle"

	Button:
		size_hint:(1,1)
		text: "Cancel"
		background_color: (1,0.1,0.1,1)
		on_press: root.parent.parent.parent.dismiss()

	Button:
		size_hint:(1,1)
		text: "Save"
		background_color: (0.3,1,0.6,1)
		on_press: root.Save(); root.parent.parent.parent.dismiss()
