#:import utils kivy.utils


<MainWindow>:
	id: MainWindow

	GridLayout:
		id: MainLayout
		rows: 1
		cols: 2
		size: root.size

		GridLayout:
			id: LeftBarLayout
			rows:8
			cols:1
			width: root.width*0.06
			height: root.height
			size_hint: (None,None)

			LeftBarButton:
				id: SettingsButton
				text: "Settings"
				height: root.height/8

			LeftBarButton:
				id: SaveRecordButton
				height: root.height/8
				text: "Save\nrecord"
				on_press: root.SaveRecord()

			LeftBarButton:
				id: RecordsButton
				height: root.height/8
				text: "Records"
				on_press: root.ShowRecords()

			LeftBarButton:
				id: SaveSceenButton
				text: "Save\nscene"
				height: root.height/8
				on_press: root.SaveScene()

			LeftBarButton:
				id: ImportSceneButton
				height: root.height/8
				text: "Import\nscene"
				on_press: root.ImportScene()


			LeftBarButton:
				id: StopAllButton
				height: root.height/8
				text: "Stop\nall"
				background_color: (1,0.1,0.1,1)
				on_press: root.FullStop()

				
		GridLayout:
			id: RightBoxLayout:
			size_hint: (None,None)
			rows:2
			cols:1
			size: (root.width - LeftBarLayout.width, root.height)


			GridLayout:
				id: TopBarLayout
				rows: 2
				cols: 12
				size_hint: (None, None)
				size: (root.width - LeftBarLayout.width ,SettingsButton.height)


				Button:
					id: AddDeviceButton
					size_hint: (None,None)
					height: TopBarLayout.height/2
					width: TopBarLayout.width/12
					text: "Add"
					font_size: '20dp'
					halign : "center"
					valign : "middle"
					on_press: root.Create()
					background_color: (0.3,1,0.6,1)

			GridLayout:
				id: InnerBox
		    	rows: 1
		    	cols: 12
		    	size_hint: (None,None)
		    	size: (root.width - LeftBarLayout.width, root.height - TopBarLayout.height)





