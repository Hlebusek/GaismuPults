
<AddWindow>:
 
    size_hint: (None, None)
    rows: 2
    cols: 1
    

    GridLayout:
        size_hint: (None,None)
        size: (root.width, root.height*0.2)
        rows:1
        cols:2

        Button:
            id: DB
            text: "Device"  
            size_hint: (1,1)
            background_color: (0.3,0.7,1,1)
            on_press: root.AddSelector = "DEVICE"; DB.background_color = (0.3,0.7,1,1); GB.background_color = (1,1,1,0.5)

        Button:
            id: GB
            text: "Group"  
            size_hint: (1,1)
            background_color: (1,1,1,0.5)
            on_press: root.AddSelector = "GROUP"; GB.background_color = (0.3,0.7,1,1); DB.background_color = (1,1,1,0.5)



    GridLayout:
        id: ChangeBox
        size_hint: (None, None)
        size: (root.width, root.height*0.8)
        rows:7
        cols:1

        GridLayout:
            rows:1
            cols:2
            size_hint: (None,None)
            size: (root.width, root.height*0.1)

            Label:
                text: "Name"
                size_hint: (1,1)

            TextInput:
                id: NInp
                size_hint: (1,1)
                font_size: "20sp"

        GridLayout:
            rows:1
            cols:2
            size_hint: (None,None)
            size: (root.width, root.height*0.1)

            Label:
                text: "DMX Universe"
                size_hint: (1,1)

            TextInput:
                id: UInp
                input_filter: "int"
                size_hint: (1,1)
                font_size: "20sp"


        GridLayout:
            rows:1
            cols:2
            size_hint: (None,None)
            size: (root.width, root.height*0.1)

            Label:
                text: "Master"
                size_hint: (1,1)

            TextInput:
                id: MInp
                input_filter: "int"
                size_hint: (1,1)
                font_size: "20sp"


        GridLayout:
            rows:1
            cols:2
            size_hint: (None,None)
            size: (root.width, root.height*0.1)

            Label:
                text: "R"
                size_hint: (1,1)

            TextInput:
                id: RInp
                input_filter: "int"
                size_hint: (1,1)
                font_size: "20sp"


        GridLayout:
            rows:1
            cols:2
            size_hint: (None,None)
            size: (root.width, root.height*0.1)

            Label:
                text: "G"
                size_hint: (1,1)

            TextInput:
                id: GInp
                input_filter: "int"
                size_hint: (1,1)
                font_size: "20sp"


        GridLayout:
            rows:1
            cols:2
            size_hint: (None,None)
            size: (root.width, root.height*0.1)

            Label:
                text: "B"
                size_hint: (1,1)

            TextInput:
                id: BInp
                input_filter: "int"
                size_hint: (1,1)
                font_size: "20sp"

        GridLayout:
            rows:1
            cols:2
            size_hint: (1,1)
            size: (root.width, root.height*0.1)


            Button:
                size_hint:(1,1)
                text: "Cancel"
                background_color: (1,0.1,0.1,1)
                on_press: root.parent.parent.parent.dismiss()
                font_size: "32dp"


            Button:
                size_hint: (1,1)
                background_color: (0.3,1,0.6,1)
                text: "Add"
                font_size: "32dp"
                on_press: root.Confirm(); root.parent.parent.parent.dismiss()

